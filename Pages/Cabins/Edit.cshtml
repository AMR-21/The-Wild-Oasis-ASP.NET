@model TheWildOasis.Pages.Cabins.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cabin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cabin.Id" />
            <div class="form-group">
                <label asp-for="Cabin.CreatedAt" class="control-label"></label>
                <input asp-for="Cabin.CreatedAt" class="form-control" />
                <span asp-validation-for="Cabin.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Name" class="control-label"></label>
                <input asp-for="Cabin.Name" class="form-control" />
                <span asp-validation-for="Cabin.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.MaxCapacity" class="control-label"></label>
                <input asp-for="Cabin.MaxCapacity" class="form-control" />
                <span asp-validation-for="Cabin.MaxCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.RegularPrice" class="control-label"></label>
                <input asp-for="Cabin.RegularPrice" class="form-control" />
                <span asp-validation-for="Cabin.RegularPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Discount" class="control-label"></label>
                <input asp-for="Cabin.Discount" class="form-control" />
                <span asp-validation-for="Cabin.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Description" class="control-label"></label>
                <input asp-for="Cabin.Description" class="form-control" />
                <span asp-validation-for="Cabin.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabin.Image" class="control-label"></label>
                <input asp-for="Cabin.Image" class="form-control" />
                <span asp-validation-for="Cabin.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

